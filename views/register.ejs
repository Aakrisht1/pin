<% include ./partials/header.ejs %>

    <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
        <div class="w-[67vh]  bg-white px-[72px] py-8 rounded-[20px] drop-shadow-2xl">
          <img class="ml-[20vh] mb-3 w-14 h-8" src="https://pngimg.com/uploads/pinterest/pinterest_PNG62.png" alt="">
            <h1 class="mb-4 text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Create an Account</h1>
            <form action="/register" method="post">
                <input class="border-2 rounded-[14px] block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">
                <input class="border-2 rounded-[14px] block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
                <input class="border-2 rounded-[14px] block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">
                <input class="border-2 rounded-[14px] block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
                <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
                <p class="text-red-800 text-xs mt-1"><%= message %></p>
                <h1 class="mt-1 ml-[22vh] font-semibold">OR</h1>
                <a href="/auth/github" class="border-2 block mt-2 w-full px-3 py-2 bg-gray-900 text-white rounded-full">
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30px" height="30px" fill="white" class="bi bi-github" viewBox="0 0 16 16">
                            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
                          </svg>
                        <div class="ml-7">
                            Continue with Github
                        </div> 
                    </div>
                </a>
                <a href="/auth/google" class="border-2 block mt-2 w-full px-3 py-2 text-black rounded-full">
                    <div class="flex items-center">
                        <img class="w-[30px] h-[30px]" src="https://singularitydesign.de/wp-6069f-content/uploads/2020/10/Google_logo.png" alt="">
                        <div class="ml-7">
                            Continue with Google
                        </div>
                    </div>
                </a>
                <p class="mt-2 text-center text-xs text-zinc-600">By continuing, you agree to Pinterest's<br> <span class="font-semibold text-black">Terms of Service</span> and acknowledge that you've read<br>our <span class="font-semibold text-black">Privacy Policy</span>. <span class="font-semibold text-black">Notice at collection</span>.</p>
            </form>
            <hr class="my-2">
            <a class="absolute text-center text-xs font-semibold ml-20 " href="/login">Already on Pinterest? Log in</a>
        </div>
    </div>

<% include ./partials/footer.ejs %>